# RAG Pipeline Configuration
# Copy this file to .env and customize your settings

# ======================
# DATABASE SETTINGS
# ======================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_TIMEOUT=10
QDRANT_DEFAULT_COLLECTION=financial_docs

# ======================
# EMBEDDING SETTINGS  
# ======================
EMBEDDING_MODEL=default
EMBEDDING_BATCH_SIZE=8
EMBEDDING_DEVICE=auto

# Available models:
# - default: all-MiniLM-L6-v2 (384D, fast)
# - high_quality: all-mpnet-base-v2 (768D, slower)
# - multilingual: paraphrase-multilingual-MiniLM-L12-v2 (384D)

# ======================
# CHUNKING SETTINGS
# ======================
DEFAULT_CHUNK_SIZE=800
DEFAULT_CHUNK_OVERLAP=150
MIN_CHUNK_SIZE=100

# ======================
# PDF PROCESSING
# ======================
PDF_EXTRACT_TEXT=true
PDF_EXTRACT_TABLES=true
PDF_DEFAULT_PAGES=all
PDF_OUTPUT_DIR=extracted_documents
PDF_TEMP_DIR=temp

# ======================
# UI SETTINGS
# ======================
STREAMLIT_HOST=localhost
STREAMLIT_PORT=8501
UI_SHOW_PROGRESS=true
UI_MAX_UPLOAD_SIZE=100

# ======================
# SEARCH SETTINGS
# ======================
DEFAULT_SEARCH_LIMIT=10
DEFAULT_SIMILARITY_THRESHOLD=0.1
ENABLE_FILTERED_SEARCH=true

# ======================
# LOGGING
# ======================
LOG_LEVEL=INFO
LOG_FILE=logs/rag_pipeline.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ======================
# PERFORMANCE
# ======================
MAX_WORKERS=4
CACHE_EMBEDDINGS=true
CACHE_DIR=.cache

# ======================
# SECURITY (Optional)
# ======================
# API_KEY=your_api_key_here
# ENCRYPT_VECTORS=false
# ALLOWED_ORIGINS=localhost,127.0.0.1